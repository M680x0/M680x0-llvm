# RUN: llc %s -mtriple=m680x0 -start-after=prologepilog -O0 -filetype=obj      \
# RUN:  -code-model=small -relocation-model=pic -o -                           \
# RUN:  | extract-section .text -h                                             \
# RUN:  | FileCheck %s -check-prefixes=x00

#------------------------------------------------------------------------------
# Tests PC-Relative Calls' offsets. The rest requires relocation and tested
# appropriately elsewhere.
#------------------------------------------------------------------------------

#
# <BACKWARD>
# 00  x00: 4e71
# 02  x00: 4e75
#
# <PCI>
# 04  x00: 4ebb 08fa
# 08  x00: 4ebb 080a
#
# <PCD>
# 0c  x00: 4eba fff2
# 10  x00: 4eba 0002
#
# <FORWARD>
# 14  x00: 4e71
# 16  x00: 4e75
--- |

  define void @BACKWARD() { entry: ret void }
  define void @PCI()      { entry: ret void }
  define void @PCD()      { entry: ret void }
  define void @FORWARD()  { entry: ret void }
  define void @ABS()      { entry: ret void }

...
--- # BACKWARD
name: BACKWARD
body: |
  bb.0:
    NOP
    RTS

...
--- # PCI
name: PCI
body: |
  bb.0:
    CALLk @BACKWARD, %d0
    CALLk @FORWARD, %d0

...
--- # PCD
name: PCD
body: |
  bb.0:
    CALLq @BACKWARD
    CALLq @FORWARD

...
--- # FORWARD
name: FORWARD
body: |
  bb.0:
    NOP
    RTS

...
